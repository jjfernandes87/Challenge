# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Runs all the tests"
  lane :test do
    scan(
      scheme: "ChallengeMarvel",
      clean: true,
      code_coverage: true
    )
    slather(
      output_directory: "coverage",
      workspace: "ChallengeMarvel.xcworkspace",
      scheme: "ChallengeMarvel",
      proj: "ChallengeMarvel.xcodeproj",
      html: true
    )
  end
end
