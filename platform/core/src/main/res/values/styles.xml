<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MarvelButton"/>

    <style name="MarvelFontWithMargins">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <style name="MarvelFont">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <style name="MarvelFont.ToolbarTitle">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MarvelFontWithMargins.Large">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MarvelFontWithMargins.Medium">
        <item name="android:textSize">16sp</item>

    </style>

    <style name="MarvelFontWithMargins.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MarvelButton.Primary">
        <item name= "cornerRadius">20dp</item>
        <item name= "android:layout_marginStart">24dp</item>
        <item name= "android:layout_marginEnd">24dp</item>
        <item name= "android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="backgroundTint">@color/primaryRed</item>
    </style>

    <style name="MarvelButton.Secondary">
        <item name= "cornerRadius">20dp</item>
        <item name= "android:layout_marginStart">24dp</item>
        <item name= "android:layout_marginEnd">24dp</item>
        <item name= "android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="strokeColor">@color/primaryRed</item>
        <item name="android:textColor">@color/primaryRed</item>
    </style>


</resources>